<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical"
              tools:ignore="MissingDefaultResource">

    <include layout="@layout/title_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/clear_history"
                android:layout_width="@dimen/setting_Configuration_size"
                android:layout_height="@dimen/setting_height"
                android:text="@string/clear_history"
                android:textSize="@dimen/setting_text_size"
                android:background="@color/setting"
                android:gravity="center"
                android:layout_margin="20dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/modify_administrator_password"
                android:layout_width="@dimen/setting_Configuration_size"
                android:layout_height="@dimen/setting_height"
                android:text="@string/modify_administrator_password"
                android:textSize="@dimen/setting_text_size"
                android:background="@color/setting"
                android:gravity="center"
                android:layout_margin="20dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/modify_super_password"
                android:layout_width="@dimen/setting_Configuration_size"
                android:layout_height="@dimen/setting_height"
                android:text="@string/modify_super_password"
                android:textSize="@dimen/setting_text_size"
                android:background="@color/setting"
                android:gravity="center"
                android:layout_margin="20dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/password_safety"
                android:layout_width="@dimen/setting_Configuration_size"
                android:layout_height="@dimen/setting_height"
                android:text="@string/password_safety"
                android:textSize="@dimen/setting_text_size"
                android:background="@color/setting"
                android:gravity="center"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>