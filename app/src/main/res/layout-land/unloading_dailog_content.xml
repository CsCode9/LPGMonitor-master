<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="600dp"
              android:layout_height="400dp"
              android:background="@drawable/unloading_dialog"
              android:orientation="vertical"
              android:padding="8dp"
              android:gravity="center_horizontal"
              tools:ignore="MissingDefaultResource"
              android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:visibility="gone"
            android:id="@+id/back_iv"
            android:layout_alignParentLeft="true"
            android:layout_width="@dimen/ready_dialog_imageview_size"
            android:layout_height="@dimen/ready_dialog_imageview_size"
            android:src="@mipmap/back96"/>
        <ImageView
            android:id="@+id/exit_iv"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/ready_dialog_imageview_size"
            android:layout_height="@dimen/ready_dialog_imageview_size"
            android:src="@mipmap/cancel96"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_margin="10dp">
            <Button
                android:id="@+id/unit_L"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="L/升"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                android:background="#8D8787"/>

            <Button
                android:id="@+id/unit_Kg"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Kg/千克"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                android:background="#8D8787"/>
            <Button
                android:id="@+id/unit_M"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="M³/立方米"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                android:background="#8D8787"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/unit_sure"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:text="确认"
                android:textSize="50sp"
                android:layout_centerInParent="true"

                android:background="#635D5D"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>